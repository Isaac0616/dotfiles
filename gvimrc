set guifont=Monaco\ For\ Powerline:h14
set mousehide

"airline
let g:airline#extensions#tabline#close_symbol = 'X'

" Toggle Menu and Toolbar
" @see http://liyanrui.is-programmer.com/articles/1791/gvim-menu-and-toolbar-toggle.html
set guioptions-=m
set guioptions-=T
